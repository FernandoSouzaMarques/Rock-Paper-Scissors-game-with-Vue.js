.m-rules {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
}
.m-rules_modal {
  display: none;
  opacity: 0;
}

.m-rules_button {
  font-size: em(15);
  background: transparent;
  border: solid em(2, 15) $white;
  color: $white;
  text-transform: uppercase;
  width: em(130, 15);
  height: em(42, 15);
  position: absolute;
  border-radius: em(10, 15);
  bottom: em(30, 15);
  right: em(30, 15);

}