// Primary
$white = hsl(0, 100%, 100%);
$rock = hsl(348, 75%, 35%);
$scissors = hsl(27, 75%, 45%);
$paper = hsl(229, 65%, 46%);
$scissors-gradient = radial-gradient(farthest-corner at 50% -50%, hsl(39, 89%, 49%), hsl(40, 84%, 53%));
$paper-gradient = radial-gradient(farthest-corner at 50% -50%, hsl(230, 89%, 62%), hsl(230, 89%, 65%));
$rock-gradient = radial-gradient(farthest-corner at 50% -50%, hsl(349, 71%, 52%), hsl(349, 70%, 56%));
$lizard-gradient = radial-gradient(farthest-corner at 50% -50%, hsl(261, 73%, 60%), hsl(261, 72%, 63%));
$cyan = radial-gradient(hsl(189, 59%, 53%), hsl(189, 58%, 57%));

// Neutral
$dark-text = hsl(229, 25%, 31%)
$score-text = hsl(229, 64%, 46%)
$header-outline = hsl(217, 16%, 45%)

// Background
$radial-gradient = radial-gradient(farthest-corner at 50% -50% , hsl(214, 47%, 23%), hsl(237, 49%, 15%));
$overlay = rgba(22, 30, 64, 0.8);